<body>
    <div class="container" id="content">
        <h1 id="title">Qual é a Rotina de skincare para a sua pele?</h1>
        <p id="description">Faça o teste agora, descubra seu tipo de pele e a rotina ideal para ela! É rapidinho!</p>
        <button class="btn" onclick="nextQuestion()">Iniciar</button>
    </div>
    <script>
        let step = 0;
        let answers = {};

        function nextQuestion() {
            const content = document.getElementById('content');
            
            if (step === 0) {
                content.innerHTML = '<h2>Qual nome podemos te chamar?</h2>' +
                    '<input type="text" id="name" placeholder="Digite seu nome" />' +
                    '<button class="btn" onclick="saveAnswer('name', document.getElementById(\'name\').value)">Próximo</button>';
            } else if (step === 1) {
                content.innerHTML = '<h2>Qual sua idade?</h2>' +
                    '<div class="options">' +
                    ['Menos de 18 anos', '18 a 24 anos', '25 a 29 anos', '30 a 39 anos', '40 a 49 anos', '50 a 59 anos', '60+']
                    .map(age => `<div class="option" onclick="saveAnswer('age', '${age}')">${age}</div>`).join('') +
                    '</div>';
            } else if (step === 2) {
                content.innerHTML = '<h2>Qual seu tipo de pele?</h2>' +
                    '<div class="options">' +
                    ['Normal', 'Seca', 'Oleosa', 'Mista', 'Sensível']
                    .map((type, index) => `<div class="option" onclick="saveAnswer('skinType', '${type}')">' +
                    `<img src="imagem${index + 1}.jpg" alt="${type}"/> ${type}</div>`).join('') +
                    '</div>';
            } else if (step === 3) {
                content.innerHTML = '<h2>Qual o desafio da sua pele?</h2>' +
                    '<div class="options">' +
                    ['Acne', 'Oleosidade / excesso de brilho', 'Rugas / Linhas de expressão / Flacidez do rosto', 'Rosácea / Sensibilidade extrema / irritação recorrente', 'Manchas escuras / Melasma', 'Cicatrizes de acne', 'Ressecamento / descamação', 'Poros dilatados', 'Textura irregular', 'Olheiras abaixo dos olhos', 'Bolsas abaixo dos olhos']
                    .map((challenge, index) => `<div class="option" onclick="saveAnswer('challenge', '${challenge}')">' +
                    `<img src="imagem${index + 6}.jpg" alt="${challenge}"/> ${challenge}</div>`).join('') +
                    '</div>';
            } else {
                content.innerHTML = '<h2>Obrigado por participar!</h2>' +
                    '<p>Suas respostas foram salvas.</p>';
                console.log(answers);
            }
            step++;
        }

        function saveAnswer(question, answer) {
            answers[question] = answer;
            localStorage.setItem('quizAnswers', JSON.stringify(answers));
            nextQuestion();
        }
    </script>
</body>
</html>
